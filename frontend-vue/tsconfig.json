{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "composite": true,
    "outDir": "./dist", // or a specific directory for build output
    "tsBuildInfoFile": "./dist/.tsbuildinfo" // Explicitly define location
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
